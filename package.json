{
  "name": "coderoyale",
  "private": true,
  "workspaces": {
    "packages": [
      "frontend"
    ],
    "nohoist": [
      "**"
    ]
  },
  "devDependencies": {
    "husky": "^7.0.0",
    "lint-staged": "^12.4.1"
  },
  "scripts": {
    "prepare": "husky install",
    "check-types": "yarn workspaces run check-types",
    "lint": "yarn workspaces run lint",
    "prettier:write": "yarn workspaces run prettier:write"
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx)": [
      "bash -c 'yarn check-types'",
      "yarn lint",
      "yarn prettier:write"
    ]
  }
}
